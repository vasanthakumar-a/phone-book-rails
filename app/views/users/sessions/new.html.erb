  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://img.freepik.com/free-vector/mobile-login-concept-illustration_114360-135.jpg?w=2000"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                      <%# <li class="logo-left"><img src="https://raw.githubusercontent.com/vasanthakumar-a/RideEther/master/static/images/RideEther.png"></li> %>

                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <%= f.label 'Email address', :class => 'form-label' %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :id => 'form2Example17', :class => 'form-control form-control-lg' %>

                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :Password, :class => 'form-label' %><br />
                    <%= f.password_field :password, autocomplete: "current-password", :id => 'form2Example17', :class => 'form-control form-control-lg' %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                  <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                  </div>
                  <% end %>

                  <div class="pt-1 mb-4">
                    <%= f.submit "Login", :class => "btn btn-danger btn-lg btn-block" %>
                  </div>

                  <%= render "users/shared/links" %>
                  <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

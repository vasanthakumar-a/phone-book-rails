<h1>Create New Contacts</h1>

<%= form_with model: @contact do |form| %>
  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :phone_number %><br>
    <%= form.number_field :phone_number %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :company_name %><br>
    <%= form.text_field :company_name %>
  </div>

  <div>
    <%= form.label :birth_date %><br>
    <%= form.date_field :birth_date %>
  </div>

  <div>
    <%= form.label :address %><br>
    <%= form.text_area :address %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

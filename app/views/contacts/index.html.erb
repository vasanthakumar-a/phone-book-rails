<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="mb-3">
                <h5 class="card-title">Contact List <span class="text-muted fw-normal ms-2">(<%= @contacts.count %>)</span></h5>
            </div>
        </div>
    </div>

    <div class="row">
        <% @contacts.each do |contact| %>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <% if contact.image.attached? %>
                            <div><%= image_tag(contact.image, :class => "avatar-md rounded-circle img-thumbnail") %></div>
                        <% else %>
                            <div><img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="avatar-md rounded-circle img-thumbnail" /></div>
                        <% end %>
                        <div class="flex-1 ms-3">
                            <h5 class="font-size-16 mb-1"><a href="#" class="text-dark"><%= contact.first_name %> <%= contact.last_name %></a></h5>
                        </div>
                    </div>
                    <div class="mt-3 pt-1">
                        <p class="text-muted mb-0"><i class="mdi mdi-phone font-size-15 align-middle pe-2 text-danger"></i> <%= contact.phone_number %></p>
                        <p class="text-muted mb-0 mt-2"><i class="mdi mdi-email font-size-15 align-middle pe-2 text-danger"></i> <%= contact.email %></p>
                        <p class="text-muted mb-0 mt-2"><i class="mdi mdi-google-maps font-size-15 align-middle pe-2 text-danger"></i> <%= contact.address %></p>
                    </div>
                    <div class="d-flex gap-2 pt-4">
                        <%= link_to 'View Contact', contact, :class=>"btn btn-danger btn-sm w-50" %>
                        <%# <button type="button" class="btn btn-soft-primary btn-sm w-50"><i class="bx bx-user me-1"></i> Profile</button> %>
                        <%# <button type="button" class="btn btn-primary btn-sm w-50"><i class="bx bx-message-square-dots me-1"></i> Contact</button> %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    </div>


    <div class="row g-0 align-items-center pb-4">
        <div class="col-sm-6">
            <div><p class="mb-sm-0">Showing 1 to 3 of 8 entries</p></div>
        </div>
        <div class="col-sm-6">
            <div class="float-sm-end">
            <%= paginate @contacts %>
            </div>
        </div>
    </div>

</div>
